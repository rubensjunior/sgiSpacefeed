{
  "meta": {
    "options": {
      "linkedFile": "/views/cadastrar-conta.ejs",
      "linkedForm": "cadastrarFormConta"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "nomeUsuario",
        "options": {
          "rules": {
            "core:required": {
              "param": "",
              "message": "Este é um campo obrigatório."
            }
          }
        },
        "name": "nomeUsuario"
      },
      {
        "type": "text",
        "fieldName": "emailUsuario",
        "options": {
          "rules": {
            "core:required": {
              "param": "",
              "message": "Este é um campo obrigatório."
            },
            "core:email": {
              "param": "",
              "message": "Insira um e-mail válido!"
            }
          }
        },
        "name": "emailUsuario"
      },
      {
        "type": "text",
        "fieldName": "senhaUsuario",
        "options": {
          "rules": {
            "core:required": {
              "param": "",
              "message": "Este é um campo obrigatório."
            }
          }
        },
        "name": "senhaUsuario"
      },
      {
        "type": "text",
        "fieldName": "senhaUsuarioConfirmacao",
        "options": {
          "rules": {
            "core:required": {
              "param": "",
              "message": "Este é um campo obrigatório."
            }
          }
        },
        "name": "senhaUsuarioConfirmacao"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "hash",
        "module": "crypto",
        "action": "passwordHash",
        "options": {
          "password": "{{$_POST.senhaUsuario}}"
        },
        "outputType": "text"
      },
      {
        "name": "validateEmail",
        "module": "validator",
        "action": "validate",
        "options": {
          "data": [
            {
              "name": "email",
              "value": "{{$_POST.emailUsuario}}",
              "rules": {
                "db:notexists": {
                  "param": {
                    "connection": "spacefeedBD",
                    "table": "usuarios",
                    "column": "email_usuario"
                  },
                  "message": "E-mail já cadastrado. Você já possui uma conta conosco."
                }
              }
            }
          ]
        }
      },
      {
        "name": "insertUsuario",
        "module": "dbupdater",
        "action": "insert",
        "options": {
          "connection": "spacefeedBD",
          "sql": {
            "type": "insert",
            "values": [
              {
                "table": "usuarios",
                "column": "nome_usuario",
                "type": "text",
                "value": "{{$_POST.nomeUsuario}}"
              },
              {
                "table": "usuarios",
                "column": "email_usuario",
                "type": "text",
                "value": "{{$_POST.emailUsuario}}"
              },
              {
                "table": "usuarios",
                "column": "senha_usuario",
                "type": "text",
                "value": "{{hash}}"
              },
              {
                "table": "usuarios",
                "column": "status_usuario",
                "type": "text",
                "value": "Ativo"
              },
              {
                "table": "usuarios",
                "column": "criado_em",
                "type": "datetime",
                "value": "{{NOW}}"
              },
              {
                "table": "usuarios",
                "column": "atualizado_em",
                "type": "datetime",
                "value": "{{NOW}}"
              }
            ],
            "table": "usuarios",
            "returning": "id_usuario",
            "query": "insert into \"usuarios\" (\"atualizado_em\", \"criado_em\", \"email_usuario\", \"nome_usuario\", \"senha_usuario\", \"status_usuario\") values (?, ?, ?, ?, ?, ?) returning \"id_usuario\"",
            "params": [
              {
                "name": ":P1",
                "type": "expression",
                "value": "{{$_POST.nomeUsuario}}",
                "test": ""
              },
              {
                "name": ":P2",
                "type": "expression",
                "value": "{{$_POST.emailUsuario}}",
                "test": ""
              },
              {
                "name": ":P3",
                "type": "expression",
                "value": "{{hash}}",
                "test": ""
              },
              {
                "name": ":P4",
                "type": "expression",
                "value": "{{NOW}}",
                "test": ""
              },
              {
                "name": ":P5",
                "type": "expression",
                "value": "{{NOW}}",
                "test": ""
              }
            ]
          }
        },
        "meta": [
          {
            "name": "identity",
            "type": "text"
          },
          {
            "name": "affected",
            "type": "number"
          }
        ]
      }
    ]
  },
  "usedModules": {
    "argon2": "^0.30.2"
  }
}