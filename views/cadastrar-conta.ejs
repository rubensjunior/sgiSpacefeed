<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="cadastrarconta" appConnect="local" components="{dmxValidator:{}}" -->
<dmx-value id="visibilidade" dmx-bind:value="0"></dmx-value>
<div class="container-fluid vh-100">
    <div class="row h-100">
        <div class="col bg-sidebar text-center col">
        </div>
        <div class="col py-5">
            <div class="row justify-content-center align-items-start">
                <div class="col-10 align-self-start">
                    <h3 dmx-hide="visibilidade.value==3">Crie Sua Conta</h3>
                    <p class="mb-4" dmx-hide="visibilidade.value==3">Está a um clique de transformar sua operação em um negócio ainda mais profissional, eficiente e preparado para crescer. Comece agora e dê o próximo grande passo rumo ao sucesso!</p>

                    <form id="cadastrarFormConta" is="dmx-serverconnect-form" method="post" action="/api/aoth/nova-conta" dmx-on:error="alertas.danger('Ocorreu um erro: '+lastError.status+lastError.message+lastError.response+'. Entre em contato com o suporte: suporte@spacefeed.app');cadastrarFormConta.reset();visibilidade.setValue(0)" dmx-on:success="cadastrarFormConta.reset();visibilidade.setValue(3)">

                        <div class="d-flex flex-column">
                            <div class="form-group mb-3"> <label for="nomeUsuario" class="form-label">*Nome completo</label>
                                <input type="text" class="form-control" id="nomeUsuario" name="nomeUsuario" aria-describedby="input1_help" required="" data-msg-required="Este é um campo obrigatório.">
                            </div>
                            <div class="form-group mb-3"> <label for="emailUsuario" class="form-label">*E-mail</label>
                                <input type="email" class="form-control" id="emailUsuario" name="emailUsuario" aria-describedby="input1_help" required="" data-msg-required="Este é um campo obrigatório." data-rule-email="" data-msg-email="Insira um e-mail válido!">
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group mb-3"> <label for="senhaUsuarioConfirmacao" class="form-label">*Senha</label>
                                        <input type="password" class="form-control" id="senhaUsuario" name="senhaUsuario" aria-describedby="input1_help" required="" data-msg-required="Este é um campo obrigatório.">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group mb-3"> <label for="senhaUsuarioConfirmacao" class="form-label">*Confirmar senha</label>
                                        <input type="password" class="form-control" id="senhaUsuarioConfirmacao" name="senhaUsuarioConfirmacao" aria-describedby="input1_help" required="" data-msg-required="Este é um campo obrigatório.">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3"> <label for="input10" class="form-label">Ao clicar em <b>“Criar conta”</b>, você concorda com os <b>Termos de Uso</b> e<b> Política de Privacidade</b> da plataforma.</label>
                            </div>
                            <div class="form-group mb-3">
                                <button id="btn6" class="btn btn-primary fw-bold" type="submit">Criar conta</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.js"></script>

<script>
    $('#cep').mask('00000-000');
        $('#numCel').mask('(00) 0 0000-0000');
        $('#numTel').mask('(00) 0000-0000');
        $('#cepPolo').mask('00000-000');
        $('#cnpjEmpresa').mask('00.000.000/0000-00', { reverse: true });
</script>
<meta name="ac:route" content="/cadastrar-conta">